  "version": "0.3.0",
  "description": "Portier client for Node.js",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portier/portier-node.git"
  },
  "keywords": [
    "portier",
    "auth"
  ],
